{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest"
      ],
      "automerge": true,
      "stabilityDays": 3
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "golang"
      ],
      "minor": {
        "automerge": false
      },
      "separateMinorPatch": true
    }
  ],
  "docker": {
    "pinDigests": true
  },
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
