{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest"
      ],
      "automerge": true,
      "stabilityDays": 3
    },
    {
      "matchPackageNames": [
        "golang"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "enabled": false
    }
  ],
  "docker": {
    "pinDigests": true
  }
}
